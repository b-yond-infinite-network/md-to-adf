{
  "name": "md-to-adf",
  "version": "0.0.0-semantically-released",
  "description": "Translate Markdown (Github) into Atlassian Document Format (ADF)",
  "main": "dist/index.js",
  "scripts": {
    "package": "ncc build source/index.js -o dist",
    "test": "jest --color",
    "coverage": "codecov",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "doc": "jsdoc source/index.js -c jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b-yond-infinite-network/md-to-adf.git"
  },
  "keywords": [
    "markdown",
    "wiki",
    "atlassian",
    "jira",
    "confluence",
    "adf"
  ],
  "dependencies": {
    "adf-builder": "^3.3.0",
    "marked": "^4.0.16"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.20.5",
    "codecov": "^4.0.0-0",
    "commitizen": "^4.2.4",
    "conventional-changelog-jscs": "^0.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "docdash": "~1.2.0",
    "husky": "^8.0.1",
    "jest-cucumber-fusion": "^0.8.1",
    "jsdoc": "^3.6.10",
    "minami": "~1.2.3",
    "semantic-release": "^19.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run package && git add dist/index.js",
      "pre-push": "npm test"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jsdoc": {
    "tags": {
      "allowUnknownTags": false
    },
    "source": {
      "include": [
        "source",
        "package.json",
        "README.md"
      ],
      "includePattern": ".js$",
      "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
      "plugins/markdown"
    ],
    "opts": {
      "template": "./node_modules/docdash",
      "encoding": "utf8",
      "destination": "./dist/docs/",
      "recurse": true,
      "verbose": true
    },
    "templates": {
      "cleverLinks": false,
      "monospaceLinks": false
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/**"
          ]
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ]
    ],
    "parserOpts": {
      "mergePattern": "Merged PR .*:"
    }
  },
  "author": "B-Yond",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/b-yond-infinite-network/md-to-adf/issues"
  },
  "homepage": "https://github.com/b-yond-infinite-network/md-to-adf#readme",
  "jest": {
    "testMatch": [
      "**/*.steps.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
