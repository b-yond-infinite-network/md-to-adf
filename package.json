{
  "name": "md-to-adf",
  "version": "0.0.0-semantically-released",
  "description": "Translate Markdown (Github) into Atlassian Document Format (ADF)",
  "main": "dist/index.js",
  "scripts": {
    "package": "ncc build index.js -o dist",
    "test": "jest --silent",
    "coverage": "codecov",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b-yond-infinite-network/md-to-adf.git"
  },
  "keywords": [
    "markdown",
    "wiki",
    "atlassian",
    "jira",
    "confluence",
    "adf"
  ],
  "dependencies": {
    "adf-builder": "^3.3.0",
    "marked": "^0.8.0"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.20.5",
    "codecov": "^4.0.0-0",
    "husky": "^3.0.9",
    "jest-cucumber-fusion": "^0.6.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "semantic-release": "^17.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run package && git add dist/index.js",
      "pre-push": "npm test"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [ "@semantic-release/github", {
        "assets": ["dist/**"]
      } ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ]
    ],
    "parserOpts": {
      "mergePattern": "Merged PR .*:"
    }
  },
  "author": "B-Yond",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/b-yond-infinite-network/md-to-adf/issues"
  },
  "homepage": "https://github.com/b-yond-infinite-network/md-to-adf#readme",
  "jest": {
    "testMatch": [
      "**/*.steps.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
